%h1
  .page-header
    -if @task.complete ==true
      %s= @task.description
    -else
      = @task.description

    = link_to 'Edit', edit_task_path(@task), class: "btn btn-info pull-right"

%br

  %ol.breadcrumb
    %li= link_to 'Tasks', tasks_path(@tasks)
    %li= @task.description

  %h4
    Due On:
    - if @task.due_date
      =@task.due_date.strftime("%m/%d/%Y")
    -else

<h1>
  <div class="page-header">
    <%= link_to 'New Task', new_task_path(@task), class: "btn btn-info pull-right" %>
    Tasks
  </div>
</h1>



<table class="table">

  <thead>
    <tr>
        <th colspan= 1>
          <strong>Description</strong>
        </th>
        <th colspan= 2>
          <strong>Due Date</strong>
        </th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td class= "col-md-2">
        <% if task.complete %>
          <s><%= link_to task.description, task_path(task) %></s>
        <% else %>
          <%= link_to task.description, task_path(task) %>
        <% end %>
      </td>

      <td class= "col-md-2">
        <% if task.due_date %>
          <%= task.due_date.strftime("%m/%d/%Y") %>
        <% else %>
        <% end %>
      </td>

      <td class = "text-right">
        <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
        <%= link_to 'Delete', task_path(task), method: "delete", class: "btn btn-danger" %>
      </td>
      <% end %>
    </tr>
  </tbody>

</table>

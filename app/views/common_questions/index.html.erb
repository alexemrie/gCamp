<div class="container">
  <div class="page-header">
    <h1>Frequently Asked Questions</h1>
  </div>

  <ul>
    <% @faqs.each do |faq| %>
      <li><%= link_to faq.question, "##{faq.slug}"  %></li>
    <% end %>
  </ul>

  <p>
    <% @faqs.each do |faq| %>
      <%= content_tag :a, '', name: faq.slug %>
      <p><h3><%= faq.question %></h3></p>
      <p><%= faq.answer %></p>
      <div><%= link_to "top", "#" %></div>
    <% end %>
  </p>

</div>

<%= form_for @user, html: {class: "form-horizontal"}  do |f| %>
    <div class="form-group">
      <div class="col-md-2">
        <%= f.label :first_name, class: "control-label" %>
      </div>

      <div class="col-md-3">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
        <%= f.label :last_name, class: "form-label" %>
      </div>

      <div class="col-md-3">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
        <%= f.label :email, class: "form-label" %>
      </div>

      <div class="col-md-3">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>


    <div class= "form-group">
        <div class= "col-md-offset-2 col-md-10">
            <%= f.submit name_of_button, class: "btn btn-primary" %>

            <%= link_to 'cancel', users_path(), class: "btn btn-default" %>
       </div>
   </div>

   <div class="form-group">
     <div class= "col-md-offset-2 col-md-3" align= "center">
        <% unless @user.new_record? %>
          <div class="well">

           <%= link_to "Delete User", user_path(@user), class: "btn btn-danger", method: :delete, data: {confirm: "Delete this user?"}  %>
          </div>
       <% end %>
     </div>
   </div>

<% end %>
